<h1>Write a review for <%= @product.strain %></h1>


<% if @review.errors.any? %>
  <h3>Oops there were some errors. Please try again:</h3>
  <ul>
    <% @review.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for @review do |f| %>
  <%= f.label :author%>
  <%= f.text_field (:author) %>

  <%= f.label :description %>
  <%= f.text_area_tag(:description, "Write a review here", size: "24x6") %>

  <%= f.label :rating%>
  <%= f.number_field(:rating, in: 1.0..5.0,) %>

  <%= f.submit  %>
<% end %>
