<%= render "layouts/errors", :object => @product %>



<%= form_for @product do |f| %>
  <%= f.label :author%>
  <%= f.text_field (:author) %>

  <%= f.label :description %>
  <%= f.text_area_tag(:description, "Write a review here", size: "24x6") %>

  <%= f.label :rating%>
  <%= f.number_field(:rating, in: 1.0..5.0,) %>

  <%= f.submit  %>
