<!DOCTYPE html>
<html>
  <head>
    <title>OGFlowers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">
    <header class="jumbotron">
      <h1 id="jumbotron">OG Flowers</h1>
    </header>

    <nav class="navbar">
        <ul class="nav nav-tabs">
          <li role="presentation" class="active"><a href="/products">Home</a></li>

          <li role="presentation"><%= link_to "New Product", new_product_path %></li>

          <% if current_user %>
          <%= current_user.email %> | <%= link_to "Sign out", '/signout' %>
          <% else %>
          <%= link_to "Sign up", 'signup' %> | <%= link_to "Sign in", '/signin' %>
          <% end %>
        </ul>
     </nav>



    <%= flash[:alert] %>
    <%= flash[:notice] %>
    <%= yield %>
  </div>
  </body>
</html>
