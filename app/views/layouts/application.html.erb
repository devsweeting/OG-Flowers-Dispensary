<!DOCTYPE html>
<html>
  <head>
    <title>OGFlowers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">
    <div class="jumbotron">
      <h1 id="jumbotron">OG Flowers</h1>
    </div>

<!-- add to navbar later -->
    <% if current_user %>
      <%= current_user.email %> | <%= link_to "Sign out", '/signout' %>
    <% else %>
      <%= link_to "Sign up", 'signup' %> | <%= link_to "Sign in", '/signin' %>
    <% end %>
<!--  -->

    <%= flash[:alert] %>
    <%= flash[:notice] %>
    <%= yield %>
  </div>
  </body>
</html>
