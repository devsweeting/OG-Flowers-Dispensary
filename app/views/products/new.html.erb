<h1>New Product</h1>

<% if @product.errors.any? %>
  <h3>Oops there were some errors. Please try again:</h3>
  <ul>
    <% @product.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<hr>

<%= form_for @product do |f| %>
  <%= f.label :strain %>
  <%= f.text_field :strain %>
  <%= f.label :cann_abbr %>
  <%= f.text_field :cann_abbr %>
  <%= f.label :cost%>
  <%= f.number_field :cost %>
  <%= f.label :origin %>
  <%= f.text_field :origin %>
  <%= f.submit  %>
<% end %>
