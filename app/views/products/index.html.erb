<h1>Products</h1>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-3">
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="https://webiconspng.com/wp-content/uploads/2017/09/Cannabis-PNG-Image-27186.png" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= product.strain %></h5>
        <p class="card-text">"Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium,.</p>
        <button id="info-button" class="btn btn-info"><%= link_to product.strain, product_path(product) %></button>
      </div>
    </div>
  </div>
  <% end %>
</div>


<%= link_to "New Product", new_product_path %>
